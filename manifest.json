{
  "manifest_version": 3,
  "name": "StackSense",
  "version": "0.1.0",

  "permissions": ["storage", "activeTab", "sidePanel", "alarms"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "StackSense"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}
